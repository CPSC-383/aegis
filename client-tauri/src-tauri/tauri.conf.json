{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Aegis Client",
  "version": "0.1.0",
  "identifier": "com.aegis.client.app",
  "build": {
    "beforeDevCommand": "deno task dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Aegis Client",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["../src/assets/goobs/goob.png"]
  }
}
