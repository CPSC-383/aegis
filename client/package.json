{
    "name": "aegis-client",
    "version": "1.0.0",
    "description": "A client for Aegis",
    "main": "dist/main/index.js",
    "author": "CPSC 383",
    "scripts": {
        "start": "electron-vite preview",
        "dev": "electron-vite dev",
        "build": "electron-vite build",
        "build:pack": "npm run build && electron-builder build --publish never",
        "build:pack:win": "npm run build && electron-builder build --win --publish never",
        "build:pack:mac": "npm run build && electron-builder build --mac --publish never",
        "build:pack:linux": "npm run build && electron-builder build --linux --publish never"
    },
    "build": {
        "appId": "com.electron.app",
        "productName": "client",
        "compression": "store",
        "directories": {
            "output": "packed-client"
        },
        "files": [
            "dist/**",
            "!**/.vscode/*",
            "!{.eslintignore,.eslintrc.cjs,.prettierignore,.prettierrc.yaml,dev-app-update.yml,CHANGELOG.md,README.md}",
            "!{.env,.env.*, .npmrc, pnpm-lock.yaml}",
            "!{tsconfig.json, tsconfig.node.json, tsconfig.web.json}"
        ],
        "win": {
            "executableName": "client",
            "target": [
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "mac": {
            "mergeASARs": false,
            "category": "public.app-category.games",
            "target": [
                {
                    "target": "dir",
                    "arch": [
                        "universal"
                    ]
                }
            ]
        },
        "linux": {
            "target": [
                {
                    "target": "appImage",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "category": "Game"
        },
        "artifactName": "${name}.${ext}",
        "npmRebuild": false,
        "electronDownload": {
            "mirror": "https://npmmirror.com/mirrors/electron/"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true,
            "deleteAppDataOnUninstall": true
        }
    },
    "dependencies": {
        "@electron-toolkit/preload": "^3.0.0",
        "@electron-toolkit/utils": "^3.0.0",
        "electron-updater": "^6.1.7",
        "framer-motion": "^11.2.10",
        "pako": "^2.1.0"
    },
    "devDependencies": {
        "@electron-toolkit/eslint-config-prettier": "^2.0.0",
        "@electron-toolkit/eslint-config-ts": "^1.0.1",
        "@electron-toolkit/tsconfig": "^1.0.1",
        "@types/node": "^18.19.9",
        "@types/pako": "^2.0.3",
        "@types/react": "^18.2.48",
        "@types/react-dom": "^18.2.18",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.19",
        "electron": "^28.2.0",
        "electron-builder": "^24.9.1",
        "electron-vite": "^2.0.0",
        "eslint": "^8.56.0",
        "eslint-plugin-react": "^7.33.2",
        "postcss-loader": "^8.1.1",
        "prettier": "^3.2.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.4.4",
        "typescript": "^5.3.3",
        "vite": "^5.0.12"
    }
}
